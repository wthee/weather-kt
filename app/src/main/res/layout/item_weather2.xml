<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="com.weather.data.model.weather.Data" />

        <variable
            name="onClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="isGone"
            type="int" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="3dp"
        android:onClick="@{onClick}"
        app:cardCornerRadius="0dp"
        app:cardElevation="0.3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/line"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{data.d}"
                        android:textColor="@color/colorAccent"
                        android:textSize="32sp"
                        tools:text="04" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingLeft="@dimen/margin_small"
                        android:text="@{data.m}"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/title_text_size"
                        tools:text="11" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_small">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{data.date_nl}"
                        android:textColor="@color/colorItemText"
                        android:textSize="@dimen/item_smalltext_size"
                        android:visibility="@{isGone}"
                        tools:text="初一" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{data.week}"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/item_text_size"
                        tools:text="星期一" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lineHeight"
                    android:layout_marginRight="@dimen/margin_small"
                    android:text="@{data.tems}"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/item_text_size"
                    tools:text="10-15C" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lineHeight"
                    android:text="@{data.wea}"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/item_text_size"
                    tools:text="小雨" />

                <TextView
                    android:id="@+id/tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/lineHeight"
                    android:text="@{data.tip}"
                    android:textColor="@color/colorItemText"
                    android:textSize="@dimen/item_text_size"
                    tools:text="顶顶顶顶顶顶" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
