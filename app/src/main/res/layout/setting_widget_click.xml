<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="@dimen/lineHeight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_small"
            android:paddingTop="@dimen/padding_small">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clickEvent"
                android:textColor="@color/colorItemText"
                android:textSize="@dimen/setting_title_size" />

            <RadioGroup
                android:id="@+id/groupCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:checkedButton="@id/ce1"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/ce1"
                    style="@style/radioStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="时间"
                    android:textSize="@dimen/setting_title_size" />

                <RadioButton
                    android:id="@+id/ce2"
                    style="@style/radioStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="日期"
                    android:textSize="@dimen/setting_title_size" />

                <RadioButton
                    android:id="@+id/ce3"
                    style="@style/radioStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:text="天气"
                    android:textSize="@dimen/setting_title_size" />

            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="@dimen/lineHeight"
            android:layout_height="match_parent"
            android:background="@color/line" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/app_info_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_small"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_appinfo" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
